FROM ubuntu:16.04

RUN apt-get update && apt-get install -y \
  netbase \
  ca-certificates \
  libgmp-dev

RUN rm -rf /var/lib/apt/lists/*

# Fixes a crash when logging weird unicode stuff to STDOUT
ENV LC_ALL C.UTF-8

WORKDIR /opt/app

COPY ./linux/_build/splitbot-exe /opt/app

CMD /opt/app/splitbot-exe